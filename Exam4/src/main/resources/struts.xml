<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>



	<package name="CustomerPackage" extends="struts-default"  >
		
		<action name="*Action" class="com.hand.action.{1}Action" method="{*}" >
			<result name="success">/index.jsp</result>
			<result name="error">/login.jsp</result>
			<result name="input">/index.jsp</result>
			<result name="out">/login.jsp</result>
		</action>
		
		<action name="EditAction" class="com.hand.action.EditAction" method="update" >
			<result name="success">/index.jsp</result>
			<result name="error">/login.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		
	</package>

</struts>    
